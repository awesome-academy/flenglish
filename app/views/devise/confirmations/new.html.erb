<div class="container mt-30">
  <h3 class="text-center"><%= t(".resend_txt") %></h3>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <%= form_for resource, url: confirmation_path,
      html: {method: :post} do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control",
          value: (resource.pending_reconfirmation? ?
          resource.unconfirmed_email : resource.email) %>
      </div>

      <div class="actions">
        <%= f.submit t(".resend_txt"), class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="mt-8">
      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
</div>

