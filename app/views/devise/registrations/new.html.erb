<div class="container mt-30">
  <h3 class="text-center"><%= t("register_account") %></h3>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for resource, url: registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :full_name %>
          <%= f.text_field :full_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :gender %>
          <div class="input-group">
            <label class="radio-inline">
              <%= f.radio_button(:gender, :male, checked: true) %>
                <%= t(:male) %>
            </label>
            <label class="radio-inline">
              <%= f.radio_button(:gender, :female) %>
                <%= t(:female) %>
            </label>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :date_of_birth %>
          <%= f.date_field :date_of_birth, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= t(".minimum_password_length",
                count: @minimum_password_length) %>)
            </em>
          <% end %>
          <br />
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit t("register"), class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <div class="mt-8">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
