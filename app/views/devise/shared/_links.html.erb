<div class="auth-links">
  <% if controller_name != Settings.controller.sessions %>
    <%= link_to t("login"), new_session_path %><br />
  <% end %>

  <% if devise_mapping.registerable? &&
    controller_name != Settings.controller.registrations %>
    <%= link_to t("sign_up"), new_registration_path %><br />
  <% end %>

  <% if devise_mapping.recoverable? &&
    controller_name != Settings.controller.passwords &&
    controller_name != Settings.controller.registrations %>
    <%= link_to t(".forgot_password"), new_password_path %>
    <br />
  <% end %>

  <% if devise_mapping.confirmable? &&
    controller_name != Settings.controller.confirmations %>
    <%= link_to t(".confirmation"), new_confirmation_path %>
    <br />
  <% end %>
</div>
