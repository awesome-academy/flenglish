<% (1..3).each do |i| %>
  <div class="item <%= i == 1 ? :active : "" %>">
    <%= image_tag "https://www.w3schools.com/bootstrap/la.jpg" %>
  <div class="header-text hidden-xs">
    <a href="#">
      <h3>
        <%= t "movie.title.en" %>
        <br>
        <small><%= t "movie.title.vi" %></small>
      </h3>
    </a>
    <p><%= t "movie.content" %></p>
    <button class="btn btn-default pull-right flat">
      <%= t :watch_movie %>
    </button>
  </div>
</div>
<% end %>
