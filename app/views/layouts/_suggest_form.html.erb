<%= form_for(:suggest) do |f| %>
  <div class="form-group">
    <%= f.text_field :movie_name, class: "form-control flat" %>
  </div>
  <div class="form-group">
    <%= f.text_field :movie_url, class: "form-control flat" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, class: "form-control flat" %>
  </div>
  <%= f.submit t(:send_suggest), class: "btn btn-primary flat btn-block" %>
<% end %>
