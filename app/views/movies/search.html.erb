<div class="full-screen mt-20">
  <div class="container-fluid">
    <div class="row">
      <%= search_form_for @search, url: search_movies_path, method: :get,
        enforce_utf8: false, class: "navbar-form navbar-left",
        remote: true do |f| %>
        <div class="input-group ml-8 mt-20">
          <span class="input-group-btn">
            <%= f.select(:level_id_eq, @levels,
              {include_blank: t("filter.level")},
              {class: "btn btn-default flat btn-sort"}) %>
            <%= f.select(:category_id_eq, @categories,
              {include_blank: t("filter.category")},
              {class: "btn btn-default btn-sort"}) %>
            <%= select_tag(:sort, options_for_select(@sort_by),
              include_blank: t("filter.sort_by"),
              class: "btn btn-default btn-sort") %>
            <%= multiple_select2(f, :genres_id_in, @genres, t("filter.genre")) %>
          </span>
          <div class="ml-20">
            <%= f.submit t("filter.name"), name: nil,
              class: "btn btn-default flat" %>
            <%= link_to t("filter_reset"), search_movies_path,
              class: "btn btn-danger flat" %>
            <%= f.hidden_field :title_cont,
              value: (params[:q][:title_cont] if params[:q].present?) %>
          </div>
        </div>
      <% end %>
      <div class="col-md-9 movie-list">
        <h3 class="section-header" id="result-count">
          <%= t("search_result", count: @movies.total_entries,
            term: params[:q][:title_cont]) if params[:q].present? %>
          <%= t("result", count: @movies.total_entries,
            term: params[:q]) unless params[:q].present? %>
        </h3>
        <div class="row ml-0" id="movies">
          <%= render partial: "home/feature_movie",
            collection: @movies, as: :movie %>
        </div>
        <div id="movie-paging">
          <%= will_paginate @movies %>
        </div>
      </div>
      <div class="col-md-3 rightside">
        <h3 class="rightside-header"><%= t :suggest_movie %></h3>
        <div class="aside-movies">
          <%= render "layouts/suggest_form" %>
        </div>
      </div>
    </div>
  </div>
</div>
